import { IOrder, PaymentMethod } from '../types';

export class OrderService {
	private payment?: string;
	private address?: string;
	private email?: string;
	private phone?: string;

	constructor() {
		const savedPayment = localStorage.getItem('orderPayment');
		if (savedPayment) {
			this.payment = savedPayment;
		}
	}

	setPayment(method: string) {
		this.payment = method;
		localStorage.setItem('orderPayment', method);
	}

	getPayment() {
		return this.payment;
	}

	setAddress(value: string) {
		this.address = value;
	}

	getAddress() {
		return this.address;
	}

	setEmail(value: string) {
		this.email = value;
	}

	getEmail() {
		return this.email;
	}

	setPhone(value: string) {
		this.phone = value;
	}

	getPhone() {
		return this.phone;
	}

	reset() {
		this.payment = undefined;
		this.address = undefined;
		this.email = undefined;
		this.phone = undefined;
		localStorage.removeItem('orderPayment');
	}

	getOrder(): IOrder {
		return {
			address: this.address ?? '',
			email: this.email ?? '',
			phone: this.phone ?? '',
			payment: this.payment as PaymentMethod,
			items: [],
			total: 0,
		};
	}
}
